@model Ghayal_Bhaag.Models.CartItem

@{
    ViewData["Title"] = "Cart Item Details";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="List">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="CartItems" asp-action="ListCartItems">Cart</a></li>
        <li class="breadcrumb-item active" aria-current="page">Details</li>
    </ol>
</nav>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-white">
                    <h4 class="mb-0">Cart Item Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-bold">Book</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Book.BookTitle) (ID: @Html.DisplayFor(model => model.Book.BookId))</dd>

                        <dt class="col-sm-4 fw-bold">Quantity</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Quantity)</dd>

                        <dt class="col-sm-4 fw-bold">Unit Price</dt>
                        <dd class="col-sm-8">Rs. @Html.DisplayFor(model => model.UnitPrice)</dd>

                        <dt class="col-sm-4 fw-bold">Total</dt>
                        <dd class="col-sm-8">Rs. @(Model.Quantity * Model.UnitPrice)</dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="EditCartItem" asp-route-id="@Model?.CartItemId" class="btn btn-primary">Edit</a>
                    <a asp-action="ListCartItems" class="btn btn-outline-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>