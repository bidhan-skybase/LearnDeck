@model Ghayal_Bhaag.Models.Bookmark

@{
    ViewData["Title"] = "Bookmark Details";
}

<div class="container py-4">
        <div class="card-body p-4">
            <div class="bookmark-details mb-4">
                <h4 class="text-primary border-bottom pb-2 mb-3">
                    <i class="fas fa-book me-2"></i>Book Information
                </h4>
                
                <div class="row g-3">
                    <div class="col-md-12 mb-3">
                        <div class="d-flex">
                            <h5 class="text-dark fw-bold mb-3">@Model.Book.BookTitle</h5>
                            <span class="ms-auto text-muted">
                                <i class="far fa-calendar-alt me-1"></i>
                                Bookmarked on @Model.CreatedDate.ToString()
                            </span>
                        </div>
                    </div>
                    
                    <div class="col-md-12 mb-3">
                        <div class="p-3 bg-light rounded">
                            <div class="row mb-3">
                                <div class="col-md-3 fw-bold text-secondary">Author</div>
                                <div class="col-md-9">@Model.Book.Author</div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-3 fw-bold text-secondary">Description</div>
                                <div class="col-md-9">
                                    <p class="text-muted">@Model.Book.Description</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="action-buttons d-flex mt-4 pt-3 border-top">
                
                <a class="btn btn-primary" href="/Books/GetBookDetail/@Model.BookId">
                    <i class="fas fa-info-circle me-1"></i> View Book Details
                </a>
                <a class="btn btn-outline-secondary ms-2" asp-action="ListBookMarks">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>
</div>