@model IEnumerable<Ghayal_Bhaag.Models.Anouncement>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="CreateAnnouncement">Create New</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
    @if (User.IsInRole("Admin"))
    {
                <a asp-action="EditAnnouncement" asp-route-id="@item.AnouncementId">Edit |</a> 
                <a asp-action="DeleteAnnouncement" asp-route-id="@item.AnouncementId">Delete</a>
    }
                <a asp-action="GetAnnouncementDetails" asp-route-id="@item.AnouncementId">Details</a> |
            </td>
        </tr>
}
    </tbody>
</table>
