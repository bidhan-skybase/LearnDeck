@{
    ViewData["Title"] = "About";
}

<div class="about-page">
    <!-- Hero Section -->
    <section class="hero-section text-center py-5 mb-5 bg-light">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <h1 class="display-4 fw-bold mb-4">About BookMart</h1>
                    <p class="lead mb-4">Your one-stop destination for discovering, exploring and acquiring the best books for your collection.</p>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="#our-story" class="btn btn-outline-secondary px-4">Our Story</a>
                        <a href="#our-mission" class="btn btn-outline-secondary px-4">Our Mission</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Our Story Section -->
    <section id="our-story" class="py-5">
        <div class="container">
            <div class="row align-items-center gx-5">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <img src="https://i.pinimg.com/564x/8a/a7/66/8aa7664b28c579669bad145c410764bc.jpg" onerror="this.src='/images/book_holder.png'" class="img-fluid rounded shadow-sm" alt="BookMart Store">
                </div>
                <div class="col-lg-6">
                    <h2 class="display-6 mb-4">Our Story</h2>
                    <p class="mb-4">BookMart began in 2010 as a small corner bookshop with a simple mission: to connect readers with stories that inspire, educate, and entertain. What started as a passion project quickly evolved into a beloved community hub for book lovers.</p>
                    <p>Over the years, we've grown from that humble beginning into a comprehensive online and physical book retailer, serving thousands of readers across the country. Our journey has been guided by our love for literature and commitment to making quality books accessible to everyone.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row g-4 text-center">
                <div class="col-md-3">
                    <div class="card border-0 bg-transparent h-100">
                        <div class="card-body">
                            <h3 class="display-5 fw-bold mb-0">10K+</h3>
                            <p class="text-muted mb-0">Book Titles</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-0 bg-transparent h-100">
                        <div class="card-body">
                            <h3 class="display-5 fw-bold mb-0">50+</h3>
                            <p class="text-muted mb-0">Categories</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-0 bg-transparent h-100">
                        <div class="card-body">
                            <h3 class="display-5 fw-bold mb-0">15K+</h3>
                            <p class="text-muted mb-0">Happy Customers</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-0 bg-transparent h-100">
                        <div class="card-body">
                            <h3 class="display-5 fw-bold mb-0">3</h3>
                            <p class="text-muted mb-0">Physical Stores</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Our Mission Section -->
    <section id="our-mission" class="py-5">
        <div class="container">
            <div class="row align-items-center gx-5">
                <div class="col-lg-6 order-lg-2 mb-4 mb-lg-0">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ8qhcEqQuEQSQke8ZUonFsKx1tVE6pwvuliQ&s" onerror="this.src='/images/book_holder.png'" class="img-fluid rounded shadow-sm" alt="Person Reading">
                </div>
                <div class="col-lg-6 order-lg-1">
                    <h2 class="display-6 mb-4">Our Mission</h2>
                    <p class="mb-4">At BookMart, we believe that books have the power to transform lives. Our mission is to foster a love for reading by providing exceptional literary experiences through carefully curated selections, knowledgeable service, and a welcoming environment for all.</p>
                    <div class="d-flex mb-3">
                        <div class="me-3 text-muted">
                            <i class="bi bi-check-circle-fill fs-4"></i>
                        </div>
                        <div>
                            <h5>Quality Selection</h5>
                            <p class="text-muted">We handpick our inventory to ensure quality and diversity across all genres.</p>
                        </div>
                    </div>
                    <div class="d-flex mb-3">
                        <div class="me-3 text-muted">
                            <i class="bi bi-check-circle-fill fs-4"></i>
                        </div>
                        <div>
                            <h5>Community Focus</h5>
                            <p class="text-muted">We support local authors and organize events that bring readers together.</p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <div class="me-3 text-muted">
                            <i class="bi bi-check-circle-fill fs-4"></i>
                        </div>
                        <div>
                            <h5>Accessibility</h5>
                            <p class="text-muted">We strive to make books accessible to everyone through competitive pricing and digital options.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Team Section -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-6 mb-3">Meet Our Team</h2>
                <p class="lead text-muted mx-auto" style="max-width: 600px;">The passionate book lovers who make BookMart what it is today.</p>
            </div>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="text-center pt-4">
                            @* <img src="/api/placeholder/150/150" class="rounded-circle" alt="Team Member"> *@
                        </div>
                        <div class="card-body text-center">
                            <h5 class="card-title">Emma Johnson</h5>
                            <p class="text-muted">Founder & CEO</p>
                            <p>Bibliophile who turned her passion into a thriving business that serves the community.</p>
                            <div class="d-flex justify-content-center gap-2">
                                <a href="#" class="text-secondary"><i class="bi bi-twitter"></i></a>
                                <a href="#" class="text-secondary"><i class="bi bi-linkedin"></i></a>
                                <a href="#" class="text-secondary"><i class="bi bi-envelope"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="text-center pt-4">
                            @* <img src="/api/placeholder/150/150" class="rounded-circle" alt="Team Member"> *@
                        </div>
                        <div class="card-body text-center">
                            <h5 class="card-title">Michael Chen</h5>
                            <p class="text-muted">Head of Curation</p>
                            <p>Literary expert with a knack for discovering hidden gems and emerging authors.</p>
                            <div class="d-flex justify-content-center gap-2">
                                <a href="#" class="text-secondary"><i class="bi bi-twitter"></i></a>
                                <a href="#" class="text-secondary"><i class="bi bi-linkedin"></i></a>
                                <a href="#" class="text-secondary"><i class="bi bi-envelope"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="text-center pt-4">
                            @* <img src="/api/placeholder/150/150" class="rounded-circle" alt="Team Member"> *@
                        </div>
                        <div class="card-body text-center">
                            <h5 class="card-title">Sarah Rodriguez</h5>
                            <p class="text-muted">Community Manager</p>
                            <p>Brings readers together through book clubs, author events, and reading programs.</p>
                            <div class="d-flex justify-content-center gap-2">
                                <a href="#" class="text-secondary"><i class="bi bi-twitter"></i></a>
                                <a href="#" class="text-secondary"><i class="bi bi-linkedin"></i></a>
                                <a href="#" class="text-secondary"><i class="bi bi-envelope"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="card bg-light border-0 p-4 p-md-5 text-center">
                        <h2 class="mb-4">Start Your Reading Journey Today</h2>
                        <p class="lead mb-4">Join thousands of satisfied customers who have found their next favorite book with us.</p>
                        <div class="d-flex justify-content-center gap-3">
                            <a asp-controller="Books" asp-action="ListBooks" class="btn btn-secondary px-4 py-2">Browse Books</a>
                            <a href="#" class="btn btn-outline-secondary px-4 py-2">Contact Us</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


    <style>
        .about-page section {
            overflow: hidden;
        }
        
        .about-page .hero-section {
            background-color: #f8f9fa;
            position: relative;
        }
        
        .about-page .hero-section::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-size: 200px;
            opacity: 0.05;
            z-index: 0;
        }
        
        .about-page .hero-section .container {
            position: relative;
            z-index: 1;
        }
        
        .about-page h1, .about-page h2, .about-page h3 {
            font-weight: 600;
        }
        
        .about-page .display-6 {
            font-size: 2.5rem;
        }
        
        .about-page .btn-outline-secondary {
            border-width: 2px;
        }
        
        .about-page .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: white;
        }
        
        .about-page .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }
        
        .about-page .text-muted {
            color: #6c757d !important;
        }
        
        .about-page .card {
            transition: transform 0.3s;
        }
        
        .about-page .card:hover {
            transform: translateY(-5px);
        }
        
        @@media (max-width: 767.98px) {
            .about-page .display-4 {
                font-size: 2.5rem;
            }
            
            .about-page .display-5 {
                font-size: 2rem;
            }
            
            .about-page .display-6 {
                font-size: 1.8rem;
            }
        }
    </style>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}