@model BookMart.Models.Anouncement

@{
    ViewData["Title"] = "Announcement Details";
}

<div class="announcement-container">
    <div class="announcement-header">
        <h2>Announcement Details</h2>
        <div class="announcement-badge">
            @{
                var isActive = DateTime.Now >= Model.StartDate && DateTime.Now <= Model.EndDate;
                <span class="badge @(isActive ? "badge-active" : "badge-inactive")">
                    @(isActive ? "Active" : "Inactive")
                </span>
            }
        </div>
    </div>
    
    <div class="announcement-card">
        <div class="announcement-title">
            <h3>@Html.DisplayFor(model => model.Title)</h3>
        </div>
        
        <div class="announcement-content">
            <div class="announcement-info">
                <div class="info-item">
                    <div class="info-label">
                        <i class="fa fa-calendar-alt"></i>
                        Start Date
                    </div>
                    <div class="info-value">
                        @Model.StartDate.ToString("MMMM dd, yyyy")
                    </div>
                </div>
                
                <div class="info-item">
                    <div class="info-label">
                        <i class="fa fa-calendar-check"></i>
                        End Date
                    </div>
                    <div class="info-value">
                        @Model.EndDate.ToString("MMMM dd, yyyy")
                    </div>
                </div>
            </div>
            
            <div class="announcement-description">
                <h4>Description</h4>
                <div class="description-content">
                    @Html.DisplayFor(model => model.Description)
                </div>
            </div>
        </div>
    </div>
    
    <div class="announcement-actions">
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="EditAnnouncement" asp-route-id="@Model?.AnouncementId" class="btn btn-primary">
                <i class="fa fa-edit"></i> Edit
            </a>
        }
        <a asp-action="GetAnnouncements" class="btn btn-secondary">
            <i class="fa fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>
